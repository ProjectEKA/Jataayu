<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="in.projecteka.jataayu">

    <application
        android:name=".JataayuApp"
        android:allowBackup="true"
        android:icon="@drawable/jataayu_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:name, android:label, android:theme">

        <activity-alias
            android:name="in.projecteka.jataayu.LauncherActivity"
            android:targetActivity="in.projecteka.jataayu.ui.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="in.projecteka.jataayu.ui.LauncherActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="in.projecteka.jataayu.home" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>