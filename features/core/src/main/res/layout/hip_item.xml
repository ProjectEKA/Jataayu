<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="hip"
            type="in.projecteka.jataayu.core.model.Hip" />
    </data>


    <TextView
        android:id="@+id/tv_provider_name"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/content_margin_medium"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.ConsentRequestHiuDetails"
        android:textSize="@dimen/text_size_large"
        android:text="@{hip.name}"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tata Memorial" />

</layout>