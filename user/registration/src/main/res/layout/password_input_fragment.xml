<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="in.projecteka.jataayu.registration.viewmodel.PasswordInputViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="@dimen/content_margin_medium"
            >


            <TextView
                android:id="@+id/account_lock_error_text"
                style="@style/TextAppearance.AccountLockErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="@dimen/content_margin_medium"
                android:padding="16dp"
                android:layout_marginBottom="18dp"
                android:text="@string/account_lock"
                android:visibility="@{viewModel.accountLockBlockEnable}"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/divider"
                app:layout_constraintVertical_bias="0.435" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="@{viewModel.accountLockBlockDividerEnable}"
                android:layout_marginTop="24dp"
                android:background="#14212121"
                app:layout_constraintTop_toTopOf="@id/tv_welcome"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="1dp" />

            <TextView
                android:id="@+id/tv_welcome"
                style="@style/TextAppearance.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_margin_extra_extra_large"
                android:text="@string/welcome"
                android:paddingTop="20dp"
                android:textSize="32sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/tv_password_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_margin_extra_extra_large"
                android:text="@string/password"
                android:paddingBottom="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cv_password" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_password"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height_large"
                android:layout_marginTop="@dimen/content_margin_extra_small"
                app:cardElevation="@dimen/content_padding_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.4"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/content_margin_medium">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginEnd="@dimen/content_margin_extra_extra_small"
                        android:layout_weight=".7"
                        android:background="@color/white"
                        android:cursorVisible="true"
                        android:drawableStart="@drawable/ic_password"
                        android:drawablePadding="@dimen/content_margin_medium"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="@{viewModel.passwordInputType}"
                        android:singleLine="true"
                        android:text="@={viewModel.inputPasswordLbl}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium"
                        app:onValueChanged="@{viewModel}" />

                    <Button
                        android:id="@+id/btn_show_hide_password"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/content_margin_medium"
                        android:focusable="true"
                        android:gravity="end"
                        android:onClick="@{()-> viewModel.togglePasswordVisible()}"
                        android:text="@{viewModel.inputPasswordVisibilityToggleLbl}"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:enabled="@{viewModel.loginEnabled}"
                android:text="@string/login"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_password" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/btn_login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="5dp">

                <TextView
                    android:onClick="@{() -> viewModel.onForgotPasswordClicked()}"
                    android:clickable="true"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:padding="@dimen/content_margin_medium"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/forgot_password"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/progress_bar_layout"
            layout="@layout/progress_layout"
            app:message="@{viewModel.showProgressMessage}"
            app:showProgress="@{viewModel.showProgress}" />

    </FrameLayout>
</layout>
