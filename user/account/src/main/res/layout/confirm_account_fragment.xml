<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.AccountCreationActivity">

    <data>
        <variable
            name="viewModel"
            type="in.projecteka.jataayu.user.account.viewmodel.ConfirmAccountViewModel" />

    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clipToPadding="false"
            android:paddingTop="@dimen/content_margin_36">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/button_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="@dimen/content_margin_large"
                    android:paddingRight="@dimen/content_margin_large"
                    android:paddingBottom="@dimen/content_margin_36">

                    <TextView
                        android:id="@+id/lbl_username"
                        style="@style/TextAppearance.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_medium"
                        android:text="@string/account_details"
                        android:textSize="@dimen/text_size_large"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lbl_create_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_extra_small"
                        android:text="@string/create_username"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_username" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_username"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height_large"
                        android:layout_marginTop="@dimen/content_margin_extra_small"
                        app:cardElevation="@dimen/content_padding_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_create_username">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:padding="@dimen/content_margin_medium">

                            <EditText
                                android:id="@+id/et_username"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_marginEnd="@dimen/content_margin_extra_extra_small"
                                android:layout_weight=".7"
                                android:background="@color/white"
                                android:cursorVisible="true"
                                android:drawableStart="@drawable/ic_username"
                                android:drawablePadding="@dimen/content_margin_medium"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:maxLength="150"
                                android:singleLine="true"
                                android:text="@={viewModel.inputUsernameLbl}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/tv_provider_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:drawablePadding="@dimen/content_margin_medium"
                                android:text="@={viewModel.usernameProviderLbl}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_medium"
                                app:resource_reference="@{viewModel.usernameProviderLblId}"
                                tools:text="@string/ncg" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/username_error_text"
                        style="@style/TextAppearance.ErrorMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_extra_extra_small"
                        android:text="@{viewModel.usernameErrorLbl}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cv_username"
                        app:toggledVisibility="@{viewModel.showErrorUserName}" />


                    <TextView
                        android:id="@+id/lbl_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_extra_small"
                        android:text="@string/create_password"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/username_error_text" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_password"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_text_height_large"
                        android:layout_marginTop="@dimen/content_margin_extra_small"
                        app:cardElevation="@dimen/content_padding_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_password">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:padding="@dimen/content_margin_medium">

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_marginEnd="@dimen/content_margin_extra_extra_small"
                                android:layout_weight=".7"
                                android:background="@color/white"
                                android:cursorVisible="true"
                                android:drawableStart="@drawable/ic_password"
                                android:drawablePadding="@dimen/content_margin_medium"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:inputType="@{viewModel.passwordInputType}"
                                android:maxLength="30"
                                android:singleLine="true"
                                android:text="@={viewModel.inputPasswordLbl}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_medium" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/password_error_text"
                        style="@style/TextAppearance.ErrorMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_extra_extra_small"
                        android:text="@string/password_validation_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cv_password"
                        app:toggledVisibility="@{viewModel.showErrorPassword}" />

                    <TextView
                        android:id="@+id/lbl_Confirm_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_extra_small"
                        android:text="@string/confirm_password"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password_error_text" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_confirm_password"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_text_height_large"
                        android:layout_marginTop="@dimen/content_margin_extra_small"
                        app:cardElevation="@dimen/content_padding_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_Confirm_password">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:padding="@dimen/content_margin_medium">

                            <EditText
                                android:id="@+id/et_confirm_password"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_marginEnd="@dimen/content_margin_extra_extra_small"
                                android:layout_weight=".7"
                                android:background="@color/white"
                                android:cursorVisible="true"
                                android:drawableStart="@drawable/ic_password"
                                android:drawablePadding="@dimen/content_margin_medium"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:inputType="@{viewModel.confirmationPasswordInputType}"
                                android:maxLength="30"
                                android:singleLine="true"
                                android:text="@={viewModel.confirmationInputPasswordLbl}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_medium" />

                            <Button
                                android:id="@+id/btn_show_hide_confirm_password"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:background="@color/transparent"
                                android:drawablePadding="@dimen/content_margin_medium"
                                android:focusable="true"
                                android:gravity="end"
                                android:onClick="@{() -> viewModel.togglePasswordVisible()}"
                                android:text="@{viewModel.inputPasswordVisibilityToggleLbl}"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_medium"
                                tools:text="@string/show" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/confirm_password_error_text"
                        style="@style/TextAppearance.ErrorMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_extra_extra_small"
                        android:text="@string/passwords_do_not_match"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cv_confirm_password"
                        app:toggledVisibility="@{viewModel.showErrorConfirmPassword}" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

            <FrameLayout
                android:id="@+id/button_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="@dimen/content_margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm_registration"
                    style="@style/Button"
                    android:layout_width="match_parent"
                    android:enabled="@{viewModel.submitEnabled}"
                    android:onClick="@{() -> viewModel.createAccount()}"
                    android:text="@string/register" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>