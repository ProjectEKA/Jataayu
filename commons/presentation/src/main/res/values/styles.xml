<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="chipStyle">@style/Chip</item>
        <item name="floatingActionButtonStyle">@style/FAB</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar.FullWidth</item>
        <item name="android:toolbarStyle">@style/Toolbar</item>
        <item name="android:tabWidgetStyle">@style/AppTabLayout</item>
        <item name="android:textViewStyle">@style/TextAppearance</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/tab_indictor_height</item>
        <item name="tabBackground">@color/white</item>
        <item name="background">@color/white</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="elevation">10dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="FAB" parent="@style/Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="iconTint">@color/white</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:elevation">@dimen/cardview_elevation</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:drawablePadding">@dimen/content_margin_small</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="backgroundTint">@color/button_color_selector</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="strokeColor">@color/button_color_selector</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="rippleColor">@color/gray</item>
        <item name="android:textColor">@color/outline_button_text_color_selector</item>
    </style>


    <style name="Button.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:drawablePadding">@dimen/content_padding_medium</item>
        <item name="icon">@drawable/ic_deny</item>
        <item name="iconTint">@color/red</item>
        <item name="strokeColor">@color/red</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:textColor">@color/deny_button_text_color</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/negative_button_ripple_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


<!--    Text styles -->

    <style name="TextAppearance">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextAppearance.AllCaps" parent="TextAppearance">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.AllCaps.Active" parent="TextAppearance.AllCaps">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearance.AllCaps.Inactive" parent="TextAppearance.AllCaps">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="TextAppearance.Heavy" parent="TextAppearance">
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.ListItemHeader" parent="TextAppearance.Heavy">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextAppearance.ListItemSubHeader" parent="TextAppearance">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Label" parent="TextAppearance">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/labelTextColor</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.ErrorMessage" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textColor">@color/error_message_color</item>
    </style>

    <style name="TextAppearance.AccountLockErrorMessage" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/accountlock_error_message</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="ConsentRequestHiuDetails" parent="TextAppearance.ListItemSubHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.Light" parent="TextAppearance.ListItemSubHeader">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>



<!--    Widget styles-->

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins_black</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="itemBackground">@drawable/bottom_nav_tab_bg_color</item>
        <item name="tabIndicatorHeight">@dimen/tab_indictor_height</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.AllCaps.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.AllCaps.Inactive</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipIcon">@drawable/chip_selector</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="checkedIcon">@drawable/chip_selector</item>
        <item name="chipIconVisible">true</item>
        <item name="textStartPadding">10dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Chip.NonEditable" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:checkable">false</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Chip.ChoiceCustomized" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_color_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStartPadding">@dimen/content_margin_medium</item>
        <item name="chipEndPadding">@dimen/content_margin_medium</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Otp">
        <item name="android:background">@drawable/rounded_corners_selector</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:digits">1234567890</item>
        <item name="android:inputType">number</item>
        <item name="android:letterSpacing">2</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">6</item>
        <item name="android:minEms">6</item>
    </style>

    <style name="DatePickerStyle" parent="Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="icon">@drawable/ic_calendar</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:drawablePadding">@dimen/content_padding_medium</item>
        <item name="android:paddingStart">@dimen/content_margin_extra_small</item>
        <item name="android:paddingTop">@dimen/content_margin_medium</item>
        <item name="android:paddingEnd">@dimen/content_margin_extra_small</item>
        <item name="android:paddingBottom">@dimen/content_margin_medium</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <color name="labelTextColor">#464646</color>

<!--  *************************   NHS styles ************************* -->

<!--    TextInputEdittext and TextInputLayout styles-->

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/text_input_layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="textAppearanceCaption">@style/TextAppearance</item>
        <item name="prefixTextAppearance">@style/PrefixStyle</item>
        <item name="prefixTextColor">@color/black</item>
        <item name="suffixTextColor">@color/black</item>
        <item name="suffixTextAppearance">@style/SuffixStyle</item>
        <item name="singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/content_margin_medium</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="PasswordTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:cursorVisible">true</item>
        <item name="hintTextColor">@color/button_text_color_selector</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="MobileNumberTextInputLayoutTextStyle" parent="TextInputLayoutStyle">
        <item name="placeholderText">99999 99999</item>
        <item name="placeholderTextAppearance">@style/PlaceHolderTextStyle</item>
    </style>

    <style name="PasswordTextInputEditTextStyle" parent="TextInputEditTextStyle">
        <item name="android:inputType">textPassword</item>
        <item name="android:drawableLeft">@drawable/ic_password</item>
        <item name="android:drawableStart">@drawable/ic_password</item>
        <item name="android:drawablePadding">@dimen/content_margin_small</item>
    </style>

    <style name="MobileNumberTextInputEditTextStyle" parent="TextInputEditTextStyle">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="PrefixStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="PlaceHolderTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="SuffixStyle" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

<!--   End TextInputEdittext and TextInputLayout styles -->


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
<!--        <item name="android:elevation">@dimen/cardview_elevation</item>-->
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:drawablePadding">@dimen/content_margin_small</item>
        <item name="android:textSize">@dimen/text_size_extra_medium</item>
        <item name="backgroundTint">@color/button_color_selector</item>
        <item name="cornerRadius">@dimen/button_corner_radius_new</item>
<!--        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NcgNhsTitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/ic_national_cancer_grid</item>
    </style>

    <style name="TextLinkStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/content_margin_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!--  *************************   END NHS styles ************************* -->
</resources>